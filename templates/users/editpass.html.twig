{% extends 'users.html.twig' %}

{% block title %}Modification du profil de
	{{ app.user.firstname }}
	{{ app.user.name }}
{% endblock %}

{% block body %}
	<div class="grix xs4 gutter-xs5 container mt-4">
		{% for message in app.flashes('error') %}
			<div class="col-xs4 p-3 my-2 rounded-1 red light-4 text-red text-dark-4">{{ message }}</div>
		{% endfor %}
		<div class="col-xs4">
			<h1>
				Modification du mot de passe de
				{{ app.user.firstname }}
				{{ app.user.name }}
			</h1>
			<form method="POST">
				<div class="form-field ">
					<label for="pass">Mot de passe</label>
					<input type="password" id="pass" class="form-control rounded-1" placeholder="Axentix" name="pass"/>
				</div>
				<div class="form-field ">
					<label for="pass2">Confirmer le mot de passe</label>
					<input type="password" id="pass2" name="pass2" class="form-control rounded-1" placeholder="Axentix"/>
				</div>
				<button class="btn shadow-1 rounded-1 blue">Valider</button>
			</form>
		</div>
	</div>
{% endblock %}
