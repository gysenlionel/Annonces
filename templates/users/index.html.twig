{% extends 'users.html.twig' %}

{% block title %}Profil de
	{{ app.user.firstname }}
	{{ app.user.name }}
{% endblock %}

{% block body %}
	<div class="grix xs4 gutter-xs5 container mt-4 mb-4">
		{% for message in app.flashes('message') %}
			<div class="col-xs4 p-3 my-2 rounded-1 green light-4 text-green text-dark-4">{{ message }}</div>
		{% endfor %}
		<div class="col-xs4">
			<h1>
				Profil de
				{{ app.user.firstname }}
				{{ app.user.name }}
			</h1>
		</div>
		<div class="col-xs1">Nom:
		</div>
		<div class="col-xs3">{{ app.user.name }}</div>
		<div class="col-xs1">Pr√©nom:</div>
		<div class="col-xs3">{{ app.user.firstname }}</div>
		<div class="col-xs1">Email:</div>
		<div class="col-xs3">
			{{ app.user.email }}
		</div>
		<div class="col-xs4">
			<a href="{{ path('users_profile_editprofile') }}" class="btn shadow-1 rounded-1 blue">Modifier le profil</a>
			<a href="{{ path('users_pass_editpass') }}" class="btn shadow-1 rounded-1 blue">Modifier le mot de passe</a>
		</div>
		<div class="col-xs4">
			<h1>
				Annonces de
				{{ app.user.firstname }}
				{{ app.user.name }}
				({{ app.user.annonces|length }})
			</h1>
		</div>
		{% for annonce in app.user.annonces %}
			<div class="col-xs1">Titre:
			</div>
			<div class="col-xs2">{{ annonce.title }}</div>
			<a href="{{ path('users_annonces_edit', {'id': annonce.id}) }}" class="btn shadow-1 rounded-1 blue">Modifier l'annonce</a>
		{% endfor %}
	</div>
{% endblock %}
