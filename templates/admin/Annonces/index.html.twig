{% extends 'base.html.twig' %}

{% block title %}Gérer les catégories
{% endblock %}

{% block body %}
	<h1>Gérer les annonces</h1>
	<a href="{{ path('admin_categories_ajout')}}" class="btn shadow-1 rounded-1 blue">Ajouter une annonce</a>
	<div class="table-responsive">
		<table class="table table-no-border">
			<thead>
				<tr>
					<th>Id</th>
					<th>Titre</th>
					<th>Date</th>
					<th>Active</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for annonce in annonces %}
					<tr>
						<td>{{ annonce.id }}</td>
						<td>{{ annonce.title }}</td>
						<td>{{ annonce.createdAt|date }}</td>
						<td>{{ annonce.active }}
							<label class="form-switch mt-2">
								<input type="checkbox" checked/>
								<span class="form-slider form-slider-thin"></span>
							</label>
						</td>
						<td>
							{# <a href="{{ path('admin_categories_modifier', {id: categorie.id})}}" class="btn shadow-1 rounded-1 blue">Modifier</a> #}
						</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
	</div>
{% endblock %}
