<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
														           and uncomment the following Encore helpers to start using Symfony UX #}
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@2.1.0/dist/axentix.min.css">
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}
		<link rel="stylesheet" href="{{ asset('css/style.css')}}">

		<script src="https://cdn.jsdelivr.net/npm/axentix@2.1.0/dist/axentix.min.js"></script>
		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		<header>
			<nav class="navbar shadow-1 primary">
				<a href="{{ path('app_home')}}" class="navbar-brand">Petites Annonces</a>
				<div class="navbar-menu ml-auto">
					<a class="navbar-link" href="{{ path('app_home')}}">Accueil</a>
					<a class="navbar-link" href="{{ path('users') }}">Profil</a>
					<a class="navbar-link" href="{{ path('users_annonces_ajout')}}">Créer annonce</a>
					<a class="navbar-link" href="{{ path('admin_home')}}">admin</a>
					<a class="navbar-link" href="{{ path('app_logout') }}">Logout</a>
				</div>
			</nav>
		</header>

		<main>
			<!-- Code here the main content -->
			{% block body %}{% endblock %}
		</main>

		<footer class="footer primary fx-center">
			Copyright © 2022 - Annonces
		</footer>
		<script src="{{ asset('js/scripts.js') }}" </body> </html>
